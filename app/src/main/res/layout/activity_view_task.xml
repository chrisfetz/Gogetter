<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ViewTaskActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_viewtask_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_task_blue"
        android:textSize="@dimen/text_size_standard" />

    <TextView
        android:id="@+id/tv_viewtask_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/tv_viewtask_created_at"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/tv_viewtask_updated_at"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small" />

</LinearLayout>