<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_set_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_set_task_title"
            android:textSize="@dimen/text_size_standard"
            android:padding="@dimen/padding_standard"/>

        <EditText
            android:id="@+id/et_set_task_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_set_task_description"
            android:textSize="@dimen/text_size_standard"
            android:padding="@dimen/padding_standard"/>

        <Button
            android:id="@+id/button_set_task_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_set_task_color"
            android:layout_gravity="center"
            android:textSize="@dimen/text_size_standard"
            android:padding="@dimen/padding_standard"
            android:background="@color/color_task_blue"
            />


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        app:srcCompat="@drawable/ic_check_white_24dp"
        android:layout_margin="16dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>